<%= form_for @changeset, @action, fn f -> %>
  <div class="form-group">
   <label>Name</label>
   <%= text_input f, :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Price</label>
    <%= textarea f, :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Image</label>
    <%= textarea f, :img, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= submit "Add Product", class: "btn btn-primary" %>
  </div>
<% end %>